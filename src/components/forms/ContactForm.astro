---
import { Button, FormInput, FormSelect, FormTextarea } from '@littlesticks/odyssey-theme-components';

const selectOptions = [
  "Google Search",
  "Social Media",
  "Email",
]

---

<form name="Contact Form" method="POST" action="/contact-thank-you">
  <FormInput type="text" label="Nombre" name="Name" placeholder="Juan Perez" />
  <FormInput type="email" label="Email" name="Email" placeholder="hello@ejemplo.com" />
  <FormSelect label="Servicio del que tienes dudas" options={selectOptions} />
  <FormTextarea label="Mensaje" name="Message" placeholder="Your message here..." />
  <Button>Enviar</Button>
</form>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }
</style>